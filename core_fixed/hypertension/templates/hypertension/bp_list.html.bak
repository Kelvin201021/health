{# core/hypertension/templates/hypertension/bp_list.html #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>BP readings</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    /* ensure chart container has height */
    .chart-card { height: 420px; }
    .chart-card canvas { height: 100% !important; display:block; }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Blood Pressure</h1>
      <div>
        <a href="{% url 'bp_create' %}" class="btn btn-success">New reading</a>
      </div>
    </div>

    <div class="container mt-4">
      <div class="card shadow-sm p-4 chart-card">
        <h4 class="text-center mb-4">Blood Pressure Trend</h4>
        <canvas id="bpChart" aria-label="Blood pressure chart"></canvas>
      </div>
    </div>

    <h3 class="mt-4">Recent readings</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Time</th>
          <th>Systolic</th>
          <th>Diastolic</th>
          <th>Pulse</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        {% for r in readings %}
        <tr>
          <td>{{ r.recorded_at|date:"Y-m-d H:i" }}</td>
          <td>{{ r.systolic }}</td>
          <td>{{ r.diastolic }}</td>
          <td>{{ r.pulse }}</td>
          <td>{{ r.notes|default:"" }}</td>
        </tr>
        {% empty %}
        <tr><td colspan="5">No readings yet.</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <!-- Chart initialisation: parses JSON sent from view -->
  <script>
  window.addEventListener('DOMContentLoaded', () => {
    // JSON strings are produced in the view as labels_json/systolic_json/diastolic_json
    // escapejs prevents JS-breaking characters. JSON.parse converts to JS arrays.
    const labels = JSON.parse('{{ labels_json|escapejs }}') || [];
    const systolicData = JSON.parse('{{ systolic_json|escapejs }}') || [];
    const diastolicData = JSON.parse('{{ diastolic_json|escapejs }}') || [];

    // ensure canvas exists
    const canvas = document.getElementById('bpChart');
    if (!canvas) {
      console.error('bpChart canvas not found');
      return;
    }
    const ctx = canvas.getContext('2d');

    // create the chart
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [
          {
            label: 'Systolic',
            data: systolicData,
            fill: false,
            tension: 0.2,
            borderColor: 'rgb(54,162,235)',
            pointRadius: 3,
            borderWidth: 2,
            spanGaps: true
          },
          {
            label: 'Diastolic',
            data: diastolicData,
            fill: false,
            tension: 0.2,
            borderColor: 'rgb(255,99,132)',
            pointRadius: 3,
            borderWidth: 2,
            spanGaps: true
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: { mode: 'index', intersect: false },
        plugins: { legend: { position: 'top' } },
        elements: { line: { cubicInterpolationMode: 'monotone' } },
        scales: {
          y: { min: 40, max: 200, ticks: { stepSize: 10 }, title: { display: true, text: 'mmHg' } },
          x: { ticks: { autoSkip: true, maxTicksLimit: 8 } }
        }
      }
    });
  });
  </script>
</body>
</html>

