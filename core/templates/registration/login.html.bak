{% extends "base.html" %}
{% block title %}Login - Hypertension System{% endblock %}

{% block content %}
<div class="row justify-content-center">
  <div class="col-md-7 col-lg-6">
    <div class="auth-card p-4">
      <h1 class="mb-3">Login</h1>

      {% if form.errors %}
        <div class="alert alert-danger">Please fix the errors below.</div>
      {% endif %}

      <form method="post" novalidate>
        {% csrf_token %}

        <div class="mb-3">
          <label for="id_username" class="form-label">Username</label>
          <input type="text" name="username" maxlength="150" autofocus required id="id_username"
                 class="form-control" value="{{ request.POST.username|default_if_none:'' }}">
        </div>

        <div class="mb-3">
          <label for="id_password" class="form-label">Password</label>
          <input type="password" name="password" required id="id_password" class="form-control">
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>

      <p class="mt-3 mb-0 small">
        Don't have an account? <a href="{% url 'hypertension:signup' %}">Sign up</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}
