{% extends "base.html" %}
{% block title %}Dashboard - Hypertension System{% endblock %}

{% block content %}
<div class="row justify-content-center">
  <div class="col-md-10">
    <div class="card p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Dashboard</h2>
        <small class="text-muted">Welcome, {{ user.username }}</small>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card p-3 mb-3">
            <h5 class="mb-2">Latest BP</h5>
            <p class="mb-0 text-muted">No readings yet â€” add your first BP reading.</p>
            <a href="#" class="btn btn-primary btn-sm mt-3">Add blood pressure</a>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card p-3 mb-3">
            <h5 class="mb-2">Quick Links</h5>
            <ul class="list-unstyled">
              <li><a href="{% url 'bp_list' %}">View all readings</a></li>
              <li><a href="{% url 'logout' %}">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-3 text-muted small">
        This is your dashboard. Later we'll show recent readings, charts, and hypertension stage here.
      </div>
    </div>
  </div>
</div>
{% endblock %}
